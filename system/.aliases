# Shows the external IP address and whois information. Useful over VPNs.
external-ip() {
    GREEN='\033[1;32m'
    IP=$(curl -s ifconfig.me)

    whois "$IP"
    echo "Your external IP is: ${GREEN}${IP}${NC}"
}

